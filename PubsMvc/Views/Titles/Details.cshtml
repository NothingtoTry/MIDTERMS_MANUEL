@model PubsMvc.Models.Title

@{
    ViewData["Title"] = "Title Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Title1</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Pub?.PubName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price?.ToString("C")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.TitleId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
