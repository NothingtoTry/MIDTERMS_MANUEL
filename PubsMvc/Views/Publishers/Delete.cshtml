@model PubsMvc.Models.Publisher

@{
    ViewData["Title"] = "Delete Publisher";
}

<h1>Delete Publisher</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Publisher ID</dt>
        <dd class="col-sm-10">@Model.PubId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.PubName</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PubId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
