@model PubsMvc.Models.Title

@{
    ViewData["Title"] = "Delete Title";
}

<h2>Delete Title</h2>

<h4>Are you sure you want to delete this title?</h4>
<div>
    <h4>@Model.Title1</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Pub?.PubName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TitleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
