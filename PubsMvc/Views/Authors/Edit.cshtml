@model PubsMvc.Models.Author

@{
    ViewData["Title"] = "Edit Author";
}

<h2>Edit Author</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="AuId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="AuLname" class="control-label"></label>
        <input asp-for="AuLname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AuFname" class="control-label"></label>
        <input asp-for="AuFname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Zip" class="control-label"></label>
        <input asp-for="Zip" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="Contract" class="form-check-input" />
        <label asp-for="Contract" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
