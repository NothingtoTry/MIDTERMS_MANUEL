@model PubsMvc.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h2>Delete Author</h2>

<h4>Are you sure you want to delete this author?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.AuFname @Model.AuLname</dd>

    <dt class="col-sm-2">City</dt>
    <dd class="col-sm-10">@Model.City</dd>

    <dt class="col-sm-2">State</dt>
    <dd class="col-sm-10">@Model.State</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="AuId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
